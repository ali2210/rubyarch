<p style="color: green"><%= notice %></p>

<div style="position : relative; left : 5pc; width : 30pc; font-size : x-large; top : 15pc; color : red"> Welcome AlphaBlog community </div>
<div style="position : relative; left : 10pc; width : 30pc; top : 18pc;">
    <%= link_to "Sign up!", signup_path, class: "btn btn-success btn-md" %>
    <%= link_to "Login", login_path , class: "btn btn-outline-info btn-md" %>
    <% if logged_in? && @user == current_user %>
            <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info" %>
    <% end %>

    <% if logged_in? %>
            <%= link_to "Logout", logout_path, class: "btn btn-outline-success", method: :delete %>
    <% end %>
    <%= link_to "Back to Profile", user_url, class: "btn btn-outline-success" %>
</div>



