<%= form_with(model: @alpha_blog,  local: true) do |form| %>
  <div style="position: relative; left : 5pc; width : 30pc;">
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div style="position: relative; left : 5pc; width : 30pc;">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div style="position: relative; left : 5pc;">
    <%= form.submit %>
  </div>
  <% end %>
